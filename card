  <script>
    // Optional: tweak the location badge depending on where she is today
    // You said she's in Vegas right now:
    document.getElementById("where").textContent = "ğŸ“ Currently in Las Vegas";

    const voucherMsg = document.getElementById("voucherMsg");
    const redeemBtn = document.getElementById("redeemBtn");
    const saveBtn = document.getElementById("saveBtn");

    redeemBtn.addEventListener("click", () => {
      voucherMsg.textContent = "Voucher accepted âœ… Please present forehead for kisses ğŸ’‹";
      sprinkleHearts();
    });

    saveBtn.addEventListener("click", () => {
      voucherMsg.textContent = "Saved ğŸ§¾ Redeem whenever you want. Expiry: literally never.";
      sprinkleHearts();
    });

    function sprinkleHearts(){
      const hearts = ["ğŸ’—","ğŸ’–","ğŸ’˜","ğŸ’•","ğŸ’"];
      for(let i=0;i<18;i++){
        const s = document.createElement("div");
        s.textContent = hearts[Math.floor(Math.random()*hearts.length)];
        s.style.position="fixed";
        s.style.left = Math.random()*100 + "vw";
        s.style.top = "-5vh";
        s.style.fontSize = (16 + Math.random()*18) + "px";
        s.style.transition = "transform 1.3s ease, opacity 1.3s ease";
        s.style.zIndex = 9999;
        document.body.appendChild(s);

        requestAnimationFrame(()=>{
          s.style.transform = `translateY(${110 + Math.random()*20}vh) rotate(${Math.random()*360}deg)`;
          s.style.opacity = "0";
        });

        setTimeout(()=>s.remove(), 1400);
      }
    }
